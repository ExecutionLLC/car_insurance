<mvc:View
        controllerName="personal.account.controller.TabBarControllers.Profile"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:layout="sap.ui.layout"
        xmlns:core="sap.ui.core">
    <Page
            showHeader="false"
    >
        <layout:VerticalLayout width="60%" hAlign="Center">
            <layout:BlockLayout background="Dashboard">
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            width="2"
                            title="{i18n>myInsuranceCompany}"
                    >
                        <Table>
                            <columns>
                                <Column />
                                <Column />
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <layout:VerticalLayout>
                                            <core:Icon
                                                    src="sap-icon://edit"
                                                    press="onEditPress"
                                                    size="2em"
                                            />
                                            <Text
                                                    text="{
                                                        path:'personModel>/insuranceCompanyId',
                                                        formatter:'.formatter.formatICAddressToName'
                                                    }"
                                            />
                                        </layout:VerticalLayout>
                                        <layout:VerticalLayout>
                                            <Text
                                                    text="{i18n>ratingOfReliability}"
                                                    class="H2"/>
                                            <Image
                                                    src="{
                                                path:'personModel>/insuranceCompanyId',
                                                formatter:'.formatter.formatICAddressToReliabilityImage'
                                            }"
                                                    width='4rem'
                                                    height="4rem"
                                            />
                                        </layout:VerticalLayout>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myBonusMalus}"
                    >
                        <HBox
                                width="100%"
                                height="2rem"
                                alignItems="Center"
                                justifyContent="SpaceAround"
                                class="sapUiSmallMarginEnd"
                        >
                            <Text
                                    text="{i18n>myBonusMalus}"
                                    class="H2"
                            />
                        </HBox>
                        <Text
                                text="{personModel>/bonusMalus}"
                                class="sapUiTinyMarginTop H1"
                        />
                    </layout:BlockLayoutCell>
                    <layout:BlockLayoutCell
                            title="{i18n>baseInsuranceCost}"
                    >
                        <Text
                                text="{i18n>baseInsuranceCost}"
                                class="H2"
                                textAlign="Begin"
                                width="100%"
                        />
                        <Text
                                text="{
                                    parts:[
                                        {path: 'personModel>/basePrice'},
                                        {path: 'i18n>currency'}
                                    ],
                                    formatter: '.formatter.formatCurrency'
                                }"
                                textAlign="Center"
                                width="100%"
                                class="H1"
                        />
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myCarsTitle}"
                    >
                        <Table
                                items="{
                                    path: 'personModel>/cars'
                                }"
                        >
                            <columns>
                                <Column/>
                                <Column/>
                                <Column/>
                                <Column width="14px"/>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Image
                                                width="134px"
                                                src="{
                                                    path: 'personModel>vehicleType',
                                                    formatter: '.formatter.formatCarTypeImage'
                                                }"
                                        />
                                        <ObjectIdentifier
                                                title="{personModel>model}"
                                                text="{personModel>numberPlate}"/>
                                        <layout:VerticalLayout>
                                            <Text
                                                    text="{i18n>insurancedTo}"/>
                                            <Text
                                                    text="{
                                                        path: 'personModel>insurances',
                                                        formatter: '.formatter.formatLastInsuranceDateTo'
                                                    }"
                                            />
                                        </layout:VerticalLayout>
                                        <core:HTML
                                                content="{
                                                    path: 'personModel>insurances',
                                                    formatter: '.formatter.formatInsuranceColorStrip'
                                                }"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
            </layout:BlockLayout>
        </layout:VerticalLayout>
    </Page>
</mvc:View>