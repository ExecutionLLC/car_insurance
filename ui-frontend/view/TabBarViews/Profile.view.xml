<mvc:View
    controllerName="personal.account.controller.TabBarControllers.Profile"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:suite="sap.suite.ui.commons">
    <Page
        showHeader="false">
        <l:Grid
            defaultSpan="L10 M10 S10"
            class="sapUiSmallMarginTop">
            <l:content>
                <CustomListItem >
                    <content>
                        <HBox
                            height ="7rem"
                            width = "96%"
                            class = "sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <VBox
                                height = "7rem"
                                alignItems ="Center"
                                width = "65%"
                                class="right-border">
                                <HBox
                                        width = "100%"
                                        height = "2rem">
                                    <Text
                                        text ="{i18n>myInsuranceCompany}"
                                        class = "H2"  />
                                </HBox>
                                <HBox
                                        width = "100%"
                                        height = "2rem">
                                    <Text
                                            text="î€¸"
                                            class = "coloredText"/>
                                    <Text
                                            text ="{
                                                path:'mainModel>/npf',
                                                formatter:'.formatter.formatNpfAddressToName'}"
                                            class="H1" />
                                </HBox>
                            </VBox>

                            <VBox
                                height ="7rem"
                                width = "35%">
                                <!--<Text
                                    text = "{
                                        path:'mainModel>/npf',
                                        formatter:'.formatter.formatNpfAddressToReliability'}"
                                    textAlign = "End"
                                    width="90%"
                                    class="green H2"/>-->
                                <HBox
                                    class="sapUiSmallMarginTop"
                                    alignItems = "Center"
                                    justifyContent = "SpaceAround">
                                    <Image
                                        src="{
                                            path:'mainModel>/npf',
                                            formatter:'.formatter.formatNpfRatingToImage'}"
                                        width = '4rem'
                                        height = "4rem"
                                        />
                                    <Text
                                        text = "{i18n>ratingOfReliability}"
                                        class="H2"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L8 M6 S6"
                            indent="L2 M3 S3"/>
                    </layoutData>
                </CustomListItem>

                <CustomListItem
                        class="sapUiTinyMarginBottom">
                    <content>
                        <VBox
                            height = "7rem"
                            alignItems ="Center"
                            width = "100%"
                            class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <HBox
                                width = "100%"
                                height = "2rem"
                                alignItems = "Center"
                                justifyContent = "SpaceAround"
                                class = "sapUiSmallMarginEnd">
                                <Text
                                    text ="{i18n>myBonusMalus}"
                                    class = "H2"  />
                            </HBox>
                            <Text
                                text ="{= ${mainModel>/tariff} }"
                                class = "sapUiTinyMarginTop H1"/>
                        </VBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L3 M2 S2"
                            indent="L2 M3 S3" />
                    </layoutData>
                </CustomListItem>

                <CustomListItem
                    class="sapUiTinyMarginBottom">
                    <content>
                        <VBox
                            height = "7rem"
                            width = "94%"
                            justifyContent = "SpaceAround"
                            class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <Text
                                text ="{i18n>baseInsuranceCost}"
                                class = "H2"
                                textAlign = "Begin"
                                width = "100%"/>
                           <Text
                                text ="{
                                    parts:[
                                        {path:'mainModel>/pensionForecast'},
                                        {path:'i18n>currency'}
                                    ],
                                    formatter: '.formatter.formatCurrency'
                                }"
                                textAlign = "Center"
                                width = "100%"
                                class = "H1"/>
                        </VBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L5 M4 S4" />
                    </layoutData>
                </CustomListItem>
                <CustomListItem>
                    <content>
                        <suite:ChartContainer
                            autoAdjustHeight="false"
                            title="{i18n>myCarsTitle}"
                            showLegend="false"
                            showZoom="false"
                            showLegendButton="false">
                            <suite:toolbar>
                                <OverflowToolbar>
                                    <ToolbarSpacer/>
                                    <Select
                                        change="onChangeSelect"
                                        selectedKey="all-time">
                                        <items>
                                            <core:Item key="{techModel>/tech/keysOfSelectInChart/allTime}" text="{i18n>allTime}"/>
                                            <core:Item key="{techModel>/tech/keysOfSelectInChart/lastYear}" text="{i18n>lastYear}"/>
                                        </items>
                                    </Select>
                                    <suite:ChartContainerToolbarPlaceholder></suite:ChartContainerToolbarPlaceholder>
                                </OverflowToolbar>
                            </suite:toolbar>
                        </suite:ChartContainer>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L8 M2 S2"
                            indent="L2 M3 S3" />
                    </layoutData>
                </CustomListItem>

            </l:content>
        </l:Grid>
    </Page>


</mvc:View>