<mvc:View
        controllerName="personal.account.controller.TabBarControllers.Profile"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:layout="sap.ui.layout"
        xmlns:core="sap.ui.core">
    <Page
            showHeader="false">
        <layout:VerticalLayout id="containerLayout" width="100%" >
            <layout:BlockLayout id="BlockLayout" background="Dashboard">
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            width="2"
                            title="{i18n>myInsuranceCompany}"
                    >
                        <Text
                                text="î€¸"
                                class="coloredText"
                        />
                        <Text
                                text="{
                                    path:'personModel>/insuranceCompanyId',
                                    formatter:'.formatter.formatICAddressToName'
                                }"
                        />
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myBonusMalus}"
                    >
                        <HBox
                                width="100%"
                                height="2rem"
                                alignItems="Center"
                                justifyContent="SpaceAround"
                                class="sapUiSmallMarginEnd"
                        >
                            <Text
                                    text="{i18n>myBonusMalus}"
                                    class="H2"
                            />
                        </HBox>
                        <Text
                                text="{= ${mainModel>/tariff} }"
                                class="sapUiTinyMarginTop H1"
                        />
                    </layout:BlockLayoutCell>
                    <layout:BlockLayoutCell
                            title="{i18n>baseInsuranceCost}"
                    >
                        <Text
                                text="{i18n>baseInsuranceCost}"
                                class="H2"
                                textAlign="Begin"
                                width="100%"
                        />
                        <Text
                                text="{
                                    parts:[
                                        {path:'mainModel>/pensionForecast'},
                                        {path:'i18n>currency'}
                                    ],
                                    formatter: '.formatter.formatCurrency'
                                }"
                                textAlign="Center"
                                width="100%"
                                class="H1"
                        />
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myCarsTitle}"
                    >
                        <Table
                                items="{
                                    path: 'personModel>/cars'
                                }">
                            <columns>
                                <Column
                                        hAlign="Center">
                                </Column>
                                <Column
                                        hAlign="Left">
                                </Column>
                                <Column
                                        hAlign="Left">
                                </Column>
                                <Column
                                        hAlign="Right">
                                </Column>
                            </columns>
                            <items>
                                <CustomListItem>
                                    <Panel
                                            expand="false"
                                            width="auto">
                                        <content>
                                            <layout:HorizontalLayout>
                                                <Text
                                                        text="CARICON"/>
                                                <layout:VerticalLayout>
                                                    <Text
                                                            text="{personModel>model}"/>
                                                    <Text
                                                            text="{personModel>numberPlate}"/>
                                                </layout:VerticalLayout>
                                                <layout:VerticalLayout>
                                                    <Text
                                                            text="{i18n>insurancedTo}"/>
                                                    <Text
                                                            text="{
                                                                path: 'personModel>insurances',
                                                                formatter: '.formatter.formatLastInsuranceDateTo'
                                                            }"/>
                                                </layout:VerticalLayout>
                                                <layout:VerticalLayout>
                                                    <core:HTML
                                                            content="{
                                                               path: 'personModel>insurances',
                                                                formatter: '.formatter.formatInsuranceColorStrip'
                                                            }"/>
                                                </layout:VerticalLayout>
                                            </layout:HorizontalLayout>
                                        </content>
                                    </Panel>
                                </CustomListItem>
                            </items>
                        </Table>
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
            </layout:BlockLayout>
        </layout:VerticalLayout>
    </Page>
</mvc:View>