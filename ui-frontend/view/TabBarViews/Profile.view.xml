<mvc:View
        controllerName="personal.account.controller.TabBarControllers.Profile"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:layout="sap.ui.layout"
        xmlns:core="sap.ui.core">
    <Page
            showHeader="false"
    >

        <layout:Grid class="profile-dashboard">
            <layout:BlockLayout background="Dashboard">
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            width="2"
                            title1="{i18n>myInsuranceCompany}"
                    >
                        <HBox
                                height="7rem"
                                width="96%"
                                class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <VBox
                                    height="7rem"
                                    alignItems="Left"
                                    width="60%"
                                    class="right-border"
                            >
                                <Text text="{i18n>myInsuranceCompany}" class="sapUiBlockCellTitle"
                                      width="100%" textAlign="Left"/>
                                <HBox
                                        width="100%"
                                        height="2rem"
                                        alignItems="Left"
                                        class="sapUiSmallMarginEnd"
                                >
                                    <core:Icon
                                            src="sap-icon://edit"
                                            press="onEditPress"
                                            width="2rem"
                                            height="2rem"
                                            size="2rem"
                                    />
                                    <Text
                                            text="{
                                                path:'personModel>/insuranceCompanyId',
                                                formatter:'.formatter.formatICAddressToName'
                                            }"
                                            class="H1"
                                    />
                                </HBox>
                                <Text
                                        text="{
                                            path:'mainModel>/npf',
                                            formatter:'.formatter.formatNpfAddressToName'
                                        }"
                                        class="coloredText sapUiTinyMarginTop"
                                />
                            </VBox>

                            <VBox
                                    height="7rem"
                                    alignItems="Center"
                                    width="5%"
                            />

                            <VBox
                                    height="7rem"
                                    width="35%"
                            >
                                <HBox
                                        class="sapUiSmallMarginTop"
                                        alignItems="Center"
                                        justifyContent="SpaceAround"
                                >
                                    <Text
                                            text="{i18n>ratingOfReliability}"
                                            class="sapUiBlockCellTitle"
                                    />
                                    <Image
                                            src="{
                                                path:'personModel>/insuranceCompanyId',
                                                formatter:'.formatter.formatICAddressToReliabilityImage'
                                            }"
                                            width='4rem'
                                            height="4rem"
                                    />
                                </HBox>
                            </VBox>
                        </HBox>

                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myBonusMalus}"
                    >
                        <Text
                                text="{
                                    path: 'personModel>/bonusMalus',
                                    formatter: '.formatter.formatBonusMalus'
                                }"
                                class="H1"
                                textAlign="Right"
                                width="100%"
                        />
                    </layout:BlockLayoutCell>
                    <layout:BlockLayoutCell
                            title="{i18n>baseInsuranceCost}"
                    >
                        <Text
                                text="{
                                    parts:[
                                        {path: 'personModel>/basePrice'},
                                        {path: 'i18n>currency'}
                                    ],
                                    formatter: '.formatter.formatCurrency'
                                }"
                                textAlign="Center"
                                width="100%"
                                class="H1"
                        />
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:BlockLayoutRow>
                    <layout:BlockLayoutCell
                            title="{i18n>myCarsTitle}"
                    >
                        <Table
                                class="profile-cars"
                                items="{
                                    path: 'personModel>/cars'
                                }"
                        >
                            <columns>
                                <Column/>
                                <Column/>
                                <Column/>
                                <Column width="0px"/>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Image
                                                width="134px"
                                                height="74px"
                                                src="{
                                                    path: 'personModel>vehicleType',
                                                    formatter: '.formatter.formatCarTypeImage'
                                                }"
                                        />
                                        <ObjectIdentifier
                                                title="{personModel>model}"
                                                text="{personModel>numberPlate}"/>
                                        <layout:VerticalLayout>
                                            <Text
                                                    text="{i18n>insurancedTo}"/>
                                            <Text
                                                    text="{
                                                        path: 'personModel>insurances',
                                                        formatter: '.formatter.formatLastInsuranceDateTo'
                                                    }"
                                            />
                                        </layout:VerticalLayout>
                                        <core:HTML
                                                content="{
                                                    path: 'personModel>insurances',
                                                    formatter: '.formatter.formatInsuranceColorStrip'
                                                }"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </layout:BlockLayoutCell>
                </layout:BlockLayoutRow>
                <layout:layoutData>
                    <layout:GridData span="L8 M10 S12" indent="L2 M1 S0"/>
                </layout:layoutData>
            </layout:BlockLayout>
        </layout:Grid>
    </Page>
</mvc:View>