<mvc:View
        controllerName="personal.account.controller.Login"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:layout="sap.ui.layout"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form"
        displayBlock="true">
    <Page
            showHeader="false">
        <form:Form
                width="40%"
                editable="true"
                class="form-margin">
            <form:formContainers>
                <form:FormContainer>
                    <form:FormElement>
                        <Label
                                class="label-position"
                                text="{i18n>login.login}"
                        />
                    </form:FormElement>
                    <form:FormElement>
                        <Input
                                id="loginInput"
                                type="Email"
                                placeholder="{i18n>placeholder.mail}"
                                submit="onEnter">
                            <layoutData>
                                <layout:GridData
                                        span="L8 M8 S8"/>
                            </layoutData>
                        </Input>
                    </form:FormElement>
                    <form:FormElement>
                        <Input
                                id="passwordInput"
                                placeholder="{i18n>placeholder.password}"
                                type="Password"
                                submit="onEnter">
                            <layoutData>
                                <layout:GridData
                                        span="L8 M8 S8"/>
                            </layoutData>
                        </Input>
                        <Link
                                text="{i18n>link.forgotPassword}"/>
                    </form:FormElement>
                    <form:FormElement>
                        <Button
                                text="{i18n>button.enter}"
                                type="Emphasized"
                                press="onEnter">
                            <layoutData>
                                <layout:GridData
                                        span="L6 M6 S4"/>
                            </layoutData>
                        </Button>
                        <Link
                                text="{i18n>link.reg}">
                            <layoutData>
                                <layout:GridData
                                        span="L2 M2 S4"/>
                            </layoutData>
                        </Link>
                    </form:FormElement>
                </form:FormContainer>
            </form:formContainers>
            <form:layout>
                <form:ResponsiveGridLayout
                        columnsL="1"
                        columnsM="1"
                        columnsS="1"/>
            </form:layout>
        </form:Form>

        <footer>
            <Toolbar>
                <content>
                    <Image
                            class="image-pointer sapUiSmallMarginBegin"
                            height="4rem"
                            src="./image/sap.png"/>
                    <ToolbarSpacer/>
                    <core:HTML
                            content="{i18n>foter.copyright}"/>
                </content>
            </Toolbar>
        </footer>
    </Page>

</mvc:View>