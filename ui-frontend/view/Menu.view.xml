<mvc:View
        controllerName="personal.account.controller.Menu"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:tnt="sap.tnt">
    <Page
            showHeader="false">
        <tnt:ToolHeader>
            <Button
                    text="î°"
                    press="onHomePress"/>
            <IconTabHeader class="cstMITHNoBBorder"
                           showOverflowSelectList="true"
                           backgroundDesign="Transparent"
                           select="onSelectTab"
                           selectedKey="{techModel>/tech/selectedKey}">
                <layoutData>
                    <OverflowToolbarLayoutData
                            shrinkable="true"/>
                </layoutData>
                <items>
                    <IconTabFilter
                            text="{i18n>toolbarIcon.profile}"
                            key="Profile"/>
                    <IconTabFilter
                            text="{i18n>toolbarIcon.insuranceHistory}"
                            key="InsuranceHistory"/>
                    <IconTabFilter
                            text="{i18n>toolbarIcon.myAutos}"
                            key="MyAutos"/>
                    <IconTabFilter
                            text="{i18n>toolbarIcon.myPolicies}"
                            key="MyPolicies"/>
                    <IconTabFilter
                            text="{i18n>toolbarIcon.myInsuranceCompany}"
                            key="MyInsuranceCompany"/>
                </items>
            </IconTabHeader>
        </tnt:ToolHeader>


        <NavContainer
                id="navCon"
                width="100%"
                height="calc(100% - 3rem - 1px)">
            <mvc:XMLView id="Profile" viewName="personal.account.view.TabBarViews.Profile"/>
            <mvc:XMLView id="InsuranceHistory" viewName="personal.account.view.TabBarViews.Report"/>
            <mvc:XMLView id="MyAutos" viewName="personal.account.view.TabBarViews.ChangeTariff"/>
            <mvc:XMLView id="MyPolicies" viewName="personal.account.view.TabBarViews.NPF"/>
            <mvc:XMLView id="MyInsuranceCompany" viewName="personal.account.view.TabBarViews.InsuranceCompany"/>

        </NavContainer>
    </Page>


</mvc:View>