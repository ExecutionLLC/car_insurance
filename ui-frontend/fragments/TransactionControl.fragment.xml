<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:layout="sap.ui.layout"
>
    <layout:VerticalLayout>
        <layout:HorizontalLayout>
            <Label
                    text="{i18n>TransactionInfo.transactionId}"
                    class="sapUiTinyMarginEnd"
            />
            <Link
                    id="hash"
                    press="onLinkPress"
            />
        </layout:HorizontalLayout>

        <layout:HorizontalLayout>
            <Label
                    text="{i18n>TransactionInfo.sender}"
                    class="sapUiTinyMarginEnd"
            />
            <Text
                    id="from"
            />
        </layout:HorizontalLayout>

        <layout:HorizontalLayout width="100%">
            <Label
                    text="{i18n>TransactionInfo.confirmationsNumber}"
                    class="sapUiTinyMarginEnd"
            />
            <Text
                    id="pending"
            />
        </layout:HorizontalLayout>
    </layout:VerticalLayout>
</core:FragmentDefinition>
